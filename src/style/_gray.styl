// silver	#C0C0C0	192,192,192
// gray	  #808080	128,128,128

$black = #000;
$white = #fff;

// Color

// 混入黑白色
// @see http://www.w3cplus.com/preprocessor/sass-color-function.html
// @see https://segmentfault.com/q/1010000002795066
// @test http://www.sassmeister.com/
morelight($color, $percent) {
  mix(white, $color, $percent);
}
moredark($color, $percent) {
  mix(black, $color, $percent);
}

