// to reset element-ui default css
.el-upload {
  input[type="file"] {
    display: none !important;
  }
}

.el-upload__input {
  display: none;
}

// 暂时性解决diolag 问题 https://github.com/ElemeFE/element/issues/2461
.el-dialog {
  transform: none;
  left: 0;
  position: relative;
  margin: 0 auto;
  min-width: 400px;
  width: 50%;
  max-width: 640px;
}

// element ui upload
.upload-container {
  .el-upload {
    width: 100%;
    .el-upload-dragger {
      width: 100%;
      height: 200px;
    }
  }
}

.el-popover {
  max-height: 400px;
  overflow-y: scroll;
}

// 修正toast层级没有 dialog 高
.mint-toast {
  z-index: 3000;
}

